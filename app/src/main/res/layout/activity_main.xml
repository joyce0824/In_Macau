<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.joyce.kuo.inmacau.MainActivity"
    android:touchscreenBlocksFocus="false">


    <ImageButton
        android:background="@drawable/main2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton2"
        android:onClick="click_map"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:background="@drawable/main1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton1"
        android:onClick="click_trip"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:background="@drawable/main3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton3"
        android:longClickable="false"
        android:onClick="click_hotel"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:background="@drawable/main4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton4"
        android:onClick="click_ticket"
        android:layout_below="@+id/imageButton2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="41dp" />

    <ImageButton
        android:background="@drawable/main5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton5"
        android:onClick="click_list"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/imageButton3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
